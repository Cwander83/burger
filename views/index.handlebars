<h2>Eat-Da-Burger!</h2>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">buger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add New burger</button>
</form>

<div class="row">
  <div class="col-md-6">

</div>
<ul>
  {{#each burgers}} 
  {{#unless devoured}} 
  {{> burgers/burger-block devoured=false}} 
  {{/unless}} 
  {{/each}}
</ul>
</div>
  <div class="col-md-6">
<h2>these Burgers have been devoured!</h2>

<ul>
  {{#each burgers}} 
  {{#if devoured}} 
  {{> burgers/burger-block devoured=true}} 
  {{/if}} 
  {{/each}}
</ul>
</div>